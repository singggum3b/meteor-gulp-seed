.b-carousel
	background-color black

	.b-progress-bar
		display none

	.item-container
		position absolute
		overflow hidden
		width 100%
		height 100%

	.control-container
		position absolute
		right 0
		bottom 8px
		left 0
		z-index 2
		text-align center

		.circle
			display inline-block
			margin 0 4px
			width 10px
			height 10px
			border-radius 50%
			background-color rgba(darkgray, 1)
			vertical-align middle
			cursor pointer

			&.active
				background-color #E22417

		.next, .prev
			display inline-block
			padding 0
			width $base-unit
			height $base-unit
			color white
			vertical-align middle
			font-weight bold
			cursor pointer

			img
				display block
				width 100%
				height 100%

.phone, .tablet
	.b-carousel
		.control-container
			position initial
			.next, .prev
				position absolute
				top 50%
				width 30px
				height 30px
				opacity 0.6
				transform translate(0, -50%)
			.next
				right 0
			.prev
				left 0

			.circle-list
				position absolute
				right 0
				bottom 8px
				left 0

























