		animation-name fadeInDown
		animation-duration 1s

.trigger-ani-leave
	opacity 1
	&.trigger-ani-leave-active
		opacity 0
		animation-name fadeOutUp
		animation-duration 1s


.page-ani-enter, .page-ani-appear
	opacity 0
	&.page-ani-enter-active, &.page-ani-appear-active
		opacity 1
		animation-name fadeIn
		animation-duration 1s

.page-ani-leave
	opacity 1
	&.page-ani-leave-active
		opacity 0
		animation-name fadeOut
		animation-duration 1s


//================Component animation=====================
.popup-animation-enter, .popup-animation-appear
	opacity 0
	transform translate3d(-50%, -100%, 0) !important
	&.popup-animation-enter-active, &.popup-animation-appear-active
		transition all 0.8s ease
		opacity 1
		transform translate3d(-50%, -50%, 0) !important

.popup-animation-leave
	opacity 1
	&.popup-animation-leave-active
		transition all 0.8s ease
		opacity 0
		transform translate3d(-50%, -100%, 0) !important
