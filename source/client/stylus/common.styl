// ========Variable====================================
// http://kouto-swiss.io/docs.html#vendors
ks-vendors-prefixes = false

$base-unit = 16px

// http://www.google.com/design/spec/style/color.html#color-color-palette
$color-primary = #f78f40
$color-secondary = #005da4
$color-neutral = #c2c2c1
$color-black = "Black"
$color-body = #ececeb;
$text-black = #636466e

box-sizing-reset()
normalize()

// ========Font====================================
html, button, input, select, textarea,
.pure-g [class *= "pure-u"]
	font-family $font-body, Times, serif
	-webkit-font-smoothing: antialiased;

h2.title
	font-family $font-headline, Times, serif
	font-weight normal
.alt-title
	font-family $font-headline-alt, Times, serif

// ========Common====================================

html
	-webkit-tap-highlight-color transparent

body
	margin 0
	background-color $color-neutral
	position relative
	padding 0


.phone, .tablet
	cursor pointer
	body
		cursor pointer

.group:before,
.group:after
	display table
	content ""

.group:after
	clear both

.group
	zoom 1

/* For IE 6/7 (trigger hasLayout) */

.waypoint-anchor
	// Fix for IE , FF
	display block
	height 1px

.btn
	display inline-block
	padding 0 10px
	min-width 130px
	border 0
	border-radius 16px
	background-color palette($color-body)
	color white
	text-align center
	text-decoration none
	line-height 30px
	cursor pointer

	& + .btn
		margin-left 4px
	&:hover
		background-color palette($color-primary)

	&[disabled]
		background-color gainsboro
		color grey
		cursor not-allowed

.jiathis_style_32x32
	*
		box-sizing content-box

body
	> .jiathis_style_32x32 + .jiathis_style_32x32
		margin-left -154px

	> .jiathis
		display none

.b-scroll-toggle
	transition all 1s
	&.hide
		position absolute
		right 0
		left 0
		transform translate(0, -100%)

//====================================
.content
	> .loader
		position fixed
		top 40%
		left 50%
		height 124px
		transform translate(-50%,0)
		text-align center

		img
			display inline-block
			min-height 70px

// ================================
arrow-upper(color)
	&:after
		bottom 0
		left 50%
		border solid transparent
		content " "
		height 0
		width 0
		position absolute
		pointer-events none
		border-color rgba(color, 0)
		border-bottom-color color
		border-width 8px
		margin-left -8px

// ===================================
.no-scroll
	position fixed
	overflow hidden
	width 100%

// ====================================
.hide
	display none !important

//====================================
.b-button
	border 1px solid gray
	background-color white
	display inline-block
	color gray
	&:hover, &.is-hover
		border-color black
		color black
	.button
		display block
		padding 10px
		.title
			cursor pointer
			text-transform uppercase
