.b-radialmenu
	padding 10px
	display inline-block
	box-shadow 0 1px 5px 2px rgba(black,0.25)
	border-radius 50%
	background-color white

	.b-radialmenu-core
		display block
		z-index 1
		position relative

	&:before
		content ""
		display none
		width 20%
		height 45%
		position absolute
		z-index 4
		top -13%
		right 2%
		border-top-right-radius 100%
		border-bottom-right-radius 100%
		cursor default
		transform rotate(-45deg)
		// background-color gold
		// opacity 0.5


	&:after
		content ""
		display none
		width 20%
		height 45%
		position absolute
		z-index 4
		bottom -13%
		right 2%
		border-top-left-radius 100%
		border-bottom-left-radius 100%
		cursor default
		transform rotate(-135deg)
		// background-color green
		// opacity 0.5

	.b-radialmenu-mask
		position relative
		// background-color gray

		&:before
			content ""
			display none
			width 20%
			height 45%
			position absolute
			z-index 4
			bottom -14%
			left -2%
			border-top-right-radius 100%
			border-bottom-right-radius 100%
			cursor default
			transform rotate(135deg)
			// background-color pink
			// opacity 0.5

		&:after
			content ""
			display none
			width 20%
			height 45%
			position absolute
			z-index 4
			top -14%
			left -2%
			border-top-left-radius 100%
			border-bottom-left-radius 100%
			cursor default
			transform rotate(45deg)
			// background-color brown
			// opacity 0.5


	.b-radialmenu-wrapper
		width 200px
		height 200px
		position relative
		border-radius 50%
		overflow hidden
		background-color whitesmoke
		-webkit-transform scale(1)
		box-shadow inset 0 0 2em 1px rgba(black,0.5)
		-webkit-backface-visibility hidden
		-webkit-mask-image -webkit-radial-gradient(circle,#fff,#000)

		&:before
			content ""
			display block
			width 100%
			height 100%
			box-shadow inset 0 0 1px 1px rgba(black,0.55)
			border-radius 50%
			position absolute
			z-index 1
			pointer-events none


		.b-radialmenu-center
			width 50%
			height 50%
			position absolute
			top 50%
			left 50%
			background-color white
			border-radius 50%
			transform translate(-50%,-50%)
			box-shadow inset 0 0 1em 1px rgba(black,0.35)
			border 2px solid white
			overflow hidden
			text-align center
			z-index 9999
			-webkit-mask-image -webkit-radial-gradient(circle, white, black)
			color white
			text-shadow 1px 1px rgba(black,0.8)
			font-size 1.25em

			&.-blank
				color grey
				text-shadow none
				font-size 0.75em

			.center-image
				width 100%
				height 100%
				position absolute
				top 0
				left 0

			> .content
				position absolute
				top 50%
				left 50%
				transform translate(-50%,-50%)

	.item-svg
		filter brightness(100%)
		-ms-filter brightness(100%)
		display inline-block
		opacity 0.85

		&.-active,&:hover
			filter url("#brighten")
			-ms-filter brightness(120%)
			display block
			opacity 1

			.item-shape
				stroke-width 1.2px
				stroke-dasharray 2.5 2.5

	.item
		position absolute
		width 50%
		height 50%
		transform-origin 100% 100%
		overflow hidden
		border 1px solid transparent
		cursor pointer
		-webkit-backface-visibility hidden
		transition all 1s

		&:hover,&.-active
			box-shadow 0 -3px 6px 6px rgba(white,.8)
			z-index 999
			.item-content
				img.item-image
					filter brightness(120%)

		.item-content
			transition all 1s
			transform-origin 100% 100%
			width 100%
			height 100%
			-webkit-backface-visibility hidden
			position relative

			img.item-image
				position absolute
				left 0
				top 0
				width 100%
				height 100%
				filter brightness(90%)

