mobile-font(fz, lh)
	font-size (fz/2)
	line-height (lh/2)

mobile-size(w, h)
	width (w/2)
	height (h/2)

shadow-bg()
	content ''
	display block
	background url('../img/header_shadow.png') no-repeat left top
	height 14px
	width 100%
	background-size cover
	.phone &
		@media (orientation: portrait)
			background-size contain

fluid-video()
	position relative
	padding-bottom 56.25%
	padding-top 30px
	height 0
	overflow hidden
	iframe, object, embed
		position absolute
		top 0
		left 0
		width 100%
		height 100%

event-item-title()
	padding 10px 0
	border-top 1px solid $line-title-gray
	margin 0
	text-transform uppercase
	font-size 13px
	position relative
	text-align center
	&:before
		content ""
		display block
		background url("../img/arrow_down_icon.png") 50% 50% no-repeat
		position: absolute
		width 31px
		height 17px
		right 10px
		top 10px

event-item()
	&.active
		.item-title
			background-color $bgcolor-title-gray
			&:before
				transform rotate(-180deg)

event-item-active()
	.item-title
		background-color $bgcolor-title-gray
		&:before
			transform rotate(-180deg)

table-title()
	height 50px
	text-align center
	line-height 50px
	font-size 15px
	font-weight bold
	text-transform uppercase
	background-color #ececec
