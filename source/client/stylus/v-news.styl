$border-color = #b2b2b2
$twitter-color = #55acee
$facebook-color = #3b5998
$instagram-color = #3f729b

.news-item
	border 1px solid $border-color
	border-radius 11px
	//box-shadow 0 0 4px 1px rgba(black,0.3)
	color #232323
	background-color white

	&.news-item--twitter
		a
			color $twitter-color

	&.news-item--facebook
		a
			color $facebook-color

	&.news-item--instagram
		a
			color $instagram-color
	.title
		font-family $font-body
		font-weight bold
		color #232323
		a
			text-decoration none
			color #232323

	&.news-item--video

		.footer

			.title
				white-space nowrap
				text-overflow ellipsis
				overflow hidden
				padding-right 40px
				text-align left
				width initial

	.photo
		position relative
		.video-button
			absolute 0 0 0 0
			text-indent -9999px
			&:before
				content ""
				display block
				background-image url("../img/play-icon.png")
				background-size contain
				width 105px
				height 105px
				absolute 50% false false 50%
				transform translate(-50%,-50%)
		img
			width 100%
			display block

	.timeline,.title,.summary
		padding 0 15px

	.header
		height 40px
		relative false

		.title
			height 40px
			line-height 40px
			font-size 15px
			overflow ellipsis
			padding-right 40px
			border-bottom 1px solid #b2b2b2
		.icon
			size 40px
			absolute 0 0 false false
			text-indent -99999px
			border-radius 0 10px 0 0

		.icon-article
			background url("../img/article.jpg")
			background-size contain
		.icon-facebook
			background url("../img/facebook.jpg")
			background-size contain
		.icon-twitter
			background url("../img/twitter.jpg")
			background-size contain
		.icon-instagram
			background url("../img/instagram.jpg")
			background-size contain

	.body
		word-break break-word
		word-wrap word-break
		position relative

		&:first-child
			.photo img
				border-radius 10px 10px 0 0
		.overlink
			absolute 0px 0px 0px 0px
			z-index 3

		.timeline
			font-size 12px
			color rgba(black,0.5)
			margin 20px 0
		.title
			font-weight bold
			font-size 18px
			margin 20px 0
		.summary
			font-size 14px
			margin 20px 0
			word-wrap break-word

	.footer
		footer-height = 35px
		background-color #f7f7f7
		height footer-height
		border-radius 0 0 10px 10px
		text-align center
		relative false

		&.share
			background-color: transparent

		.title
			height footer-height
			line-height footer-height
			font-size 20px
			font-weight bold
			white-space nowrap
			overflow hidden
			width calc(100% - 25px)
			text-overflow ellipsis

		.liked,.retwitted,.favoured,.source-url,.share
			display inline-block
			font-size 11px
			opacity 0.4
			height 35px
			line-height 35px
			span
				line-height 35px
				height 35px
				vertical-align middle

			&:before
				content ""
				width 20px
				height 20px
				display inline-block
				vertical-align middle
				margin-right 5px
		.liked
			&:before
				background url("../img/fb_like.png") center no-repeat
				background-size contain
		.favoured
			absolute false 0 false false
			margin-right 15px
			&:before
				background url("../img/tweet_like.png") center no-repeat
				background-size contain
		.retwitted
			&:before
				background url("../img/retweet.png") center no-repeat
				background-size contain
		.source-url
			absolute false false false 0
			margin-left 15px
			&:before
				background url("../img/goto.png") center no-repeat
				background-size contain
		.share
			absolute 0 0 false false
			margin-right 5px
			background url("../img/social_share.png")	center no-repeat
			background-size contain
			width (51px/2)
			&:before
				display none
			.stButton
				margin 0
				.stLarge
					mobile-size(51px, 51px)
					background-image: none!important

.v-news
	//.b-grid-flexible .item:first-child
	.news-item--video
		.footer
			footer-height = 58px
			height footer-height

			.title, .share
				line-height footer-height
				height footer-height

	.b-field-select
		position relative
		select
			-webkit-appearance none
			-moz-appearance none
			appearance none
			border-radius 5px
			width 192px
			height 25px
			padding 0 0 0 6px
			font-size 13px
			border 1px solid #b7b7b7
		&:before
			position absolute
			top 0
			right 4px
			content ""
			display block
			width 20px
			height 20px
			background url("../img/svg/prev.svg")	center no-repeat
			background-size 70% 70%
			transform rotate(-90deg)

	.filter
		text-align right
		padding 5px
	.actions
		text-align center
	.news-item
		margin 5px
	.news-item--article
		.footer
			background: none
	&.v-news--list
		.news-item
			margin 10px 0
.phone
	.header
		.title
			border-bottom 1px solid $border-color
	.news-item
		box-shadow initial
		&.news-item--article
			.footer
				background-color initial
	.filter
		padding 5px 0
		.button-list
			padding-right 40px
		.b-dropdown
			width 100%
			height 45px
			font-size 18px
			//text-align center
			&:before
				top 9px
				right 9px
				width 28px
				height 28px
			a
				padding: 11px;
	.v-news--list
		.filter
			.button-list
				padding-right 0
		
