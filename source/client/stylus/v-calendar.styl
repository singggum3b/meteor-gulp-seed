.v-calendar-item
	margin 5px
	border-radius 10px
	border 1px solid #b7b7b7
	padding 10px
	text-align center
	color $text-black-big
	.no-link
		visibility hidden
	.btn
		min-width 110px
	.summary
		text-align center
		line-height 22px
		text-transform uppercase
		margin 15px 0
		.date
			font-weight bold
			text-overflow ellipsis
			overflow hidden
			white-space nowrap
			display block

	.location,.country
		text-transform uppercase
	.country
		font-size 12px
		line-height 11px

	.logo
		ratio-box(3/1)
		max-height 70px
		img
			absolute 0
			width 100%

.v-calendar
	.calendar-group
		gs("fluid",4,25%,0%)
		> .wrapper
				col(1)

	.actions
		text-align center

.desktop, .tablet
	.v-calendar-item
		.location
			text-overflow ellipsis
			overflow hidden
			white-space nowrap

.phone
	.v-calendar-item
		margin 5px 0
		.logo
			img
				width initial
				max-width 100%
				margin 0 auto
				max-height 70px
	.v-calendar
		.btn.load-more
			margin-top 8px
		.calendar-group
			gs("fluid",1,100%,0%)
			> .wrapper
				col(1)
