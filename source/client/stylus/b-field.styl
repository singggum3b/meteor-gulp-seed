$bg-color = #D6D6D6

.b-field
	> span
		padding: 0 ($base-unit/ 2) 0 0

	> input
		padding ($base-unit/ 2)
		border 0
		background-color $bg-color

		&:focus
			outline 0
			border 0

	> textarea
		padding ($base-unit/ 2)
		max-width 100%
		border 0
		background-color $bg-color
		white-space pre-wrap

		&:focus
			outline 0

	&.b-field-block
		> span
			display block

		> input, > textarea
			display block
			width 100%

	&.b-field-radio
		.item
			display inline-block
			padding ($base-unit/ 2)

	&.b-field-select
		select
			padding ($base-unit/ 2)
			border 0
			box-shadow inset 0 0 1px grey

	&.b-field-label
		padding 0 4px
		line-height 28px

	&.is-invalid

		&.is-original
			> input
				background-color $bg-color

			> textarea
				background-color $bg-color

		> input
			background-color beige

		> textarea
			background-color beige


























