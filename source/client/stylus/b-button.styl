$arrow-color = #494e5f

.b-button
	position relative
	cursor pointer

	& + .b-button
		margin-left 0.5em

	.button
		position relative
		z-index 0
		cursor pointer
		transform translateZ(99%)
		&:hover, &.is-hover
			transform translateZ(99%)
			&:before
				border-color black

			.button--text
				color black

		&.button--image
			display block
			height 100%
			.icon-wrapper
				width 100%
				height 100%

			img
				display block
				width 100%
				height 100%
		&.button--text
			position relative
			padding-right 30px
			&:before
				position absolute
				top 15px
				right 10px
				content ""
				display inline-block
				width 10px
				height 10px
				border-right 1px solid $arrow-color
				border-top 1px solid $arrow-color
				transform rotate(45deg)
				transition all 1s
				cursor pointer
			&:hover, &.is-hover
				color black
				&:before
					border-color black

&.back
	margin-right 5px
	.button
		&.button--text
			padding-left 30px
			padding-right 10px
			&:before
				transform rotate(225deg)
				right auto
				left 10px
&.mailto
	.button--text
		color gray
		text-decoration none

	.b-overlay
		z-index 1
		opacity 0

	.button-list
		position absolute

























